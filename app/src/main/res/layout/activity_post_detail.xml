<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/back_button_post_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_gravity="left"
            android:layout_marginLeft="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/share_button_change_style"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/heart_no_fill"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorFont"/>

            <TextView
                android:id="@+id/save_button_change_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:fontFamily="@font/dotumbold"
                android:text="저장"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorFont"/>

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/image_post"
        android:src="@drawable/example1_f"
        android:layout_width="match_parent"
        android:scaleType="center"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/post_back">

            <ImageView
                android:id="@+id/profile_post"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/person"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/name_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/dotummedium"
                    android:gravity="center_vertical"
                    android:text="박경연"
                    android:textColor="@color/colorFont"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/date_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/dotummedium"
                    android:gravity="center_vertical"
                    android:text="2020년 6월 19일"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center"
                android:layout_weight="0"
                android:layout_marginRight="5dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/heart"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/heart_post"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:layout_weight="1"
                    android:fontFamily="@font/dotumbold"
                    android:textSize="17dp"
                    android:textColor="@color/color6"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>